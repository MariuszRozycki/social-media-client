{
  "singleQuote": true,
  "overrides": [
    {
      "files": "cypress/e2e/*.cy.js",
      "options": {
        "semi": false,
        "trailingComma": "none",
        "arrowParens": "avoid"
      }
    },
    {
      "files": "*.html",
      "options": {
        "printWidth": 300,
        "htmlWhitespaceSensitivity": "strict"
      }
    }
  ]
}
